class Solution(object):
    def mergeAlternately(self, word1, word2):
        result = [] #empty list of strings to store the result
        n = min(len(word1), len(word2))
        
        #loop till the smaller string ends and add each string
        for i in range(n):
            result.append(word1[i]) #append is faster than concat
            result.append(word2[i])

        #now add remaining part of longer string
        if n < len(word1):
           result.append(word1[n:])

        if n < len(word2):
           result.append(word2[n:])

        return "". join(result)
