class Solution:
    def kidsWithCandies(self, candies: List[int], extraCandies: int) -> List[bool]:

        curr_maximum =  max(candies)
        result = []
        n = len(candies)

        for i in range(n):
            if candies[i] + extraCandies >= curr_maximum:
                result.append(True)
            else:
                result.append(False)
        
        return result
